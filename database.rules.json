{
  "rules": {
    "users": {
      "$uid": {
        "checklists": {
          "$checklistId": {
            ".read": "auth != null",
            ".write": "$uid === auth.uid || root.child('shared').child($checklistId).child('sharedWith').hasChildren()"
          }
        },
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    "shared": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}